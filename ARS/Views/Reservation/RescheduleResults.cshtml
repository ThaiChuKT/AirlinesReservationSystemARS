@model ARS.ViewModels.RescheduleSearchResultViewModel
@{
    ViewData["Title"] = "Select new flight";
}

<div class="container mt-4">
    <h3>Select new flight for @Model.Reservation.ConfirmationNumber</h3>
    <p class="text-muted">New date: @Model.NewDate.ToString("MMMM dd, yyyy") | Passengers: @Model.Passengers | Class: @Model.Class</p>

    @if (Model.Flights.Any())
    {
        foreach (var flight in Model.Flights)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="text-primary mb-0">@flight.FlightNumber</h5>
                            <p class="mb-0">@flight.OriginAirportCode -> @flight.DestinationAirportCode</p>
                            <small class="text-muted">@flight.DepartureTime.ToString("MMM dd, yyyy HH:mm") - @flight.ArrivalTime.ToString("HH:mm")</small>
                        </div>
                        <div class="col-md-4 text-end">
                            <h4 class="text-success">â‚±@flight.FinalPrice.ToString("N2")</h4>
                            <p class="text-muted small">@flight.AvailableSeats seats available</p>
                            <a asp-action="ConfirmReschedule" asp-route-reservationId="@Model.Reservation.ReservationID" asp-route-flightId="@flight.FlightID" asp-route-scheduleId="@flight.ScheduleID" asp-route-newDate="@Model.NewDate" class="btn btn-primary">Select</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">No available flights found for the selected date.</div>
        <a asp-action="Reschedule" asp-route-id="@Model.Reservation.ReservationID" class="btn btn-secondary">Try another date</a>
    }
</div>