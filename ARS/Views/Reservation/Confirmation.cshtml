@model ARS.Models.Reservation
@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body text-center p-5">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    <h1 class="mt-3 text-success">Booking Confirmed!</h1>
                    <p class="lead">Your flight reservation has been successfully completed.</p>
                    
                    <div class="alert alert-info mt-4" role="alert">
                        <h4 class="alert-heading">Confirmation Number</h4>
                        <h2 class="mb-0"><strong>@Model.ConfirmationNumber</strong></h2>
                        <small class="text-muted">Please save this number for your records</small>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Flight Details</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">Flight Number</p>
                            <h5>@Model.Flight?.FlightNumber</h5>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">Travel Date</p>
                            <h5>@Model.TravelDate.ToString("MMMM dd, yyyy")</h5>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">From</p>
                            <h5>@Model.Flight?.OriginCity?.CityName (@Model.Flight?.OriginCity?.AirportCode)</h5>
                            <p class="text-muted">Departure: @Model.Flight?.DepartureTime.ToString("HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1 text-muted">To</p>
                            <h5>@Model.Flight?.DestinationCity?.CityName (@Model.Flight?.DestinationCity?.AirportCode)</h5>
                            <p class="text-muted">Arrival: @Model.Flight?.ArrivalTime.ToString("HH:mm")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <p class="mb-1 text-muted">Class</p>
                            <h6><span class="badge bg-info">@Model.Class</span></h6>
                        </div>
                        <div class="col-md-4">
                            <p class="mb-1 text-muted">Passengers</p>
                            <h6>
                                @if (Model.NumAdults > 0) { <span>@Model.NumAdults Adult(s)</span> }
                                @if (Model.NumChildren > 0) { <span>@Model.NumChildren Child(ren)</span> }
                                @if (Model.NumSeniors > 0) { <span>@Model.NumSeniors Senior(s)</span> }
                            </h6>
                        </div>
                        <div class="col-md-4">
                            <p class="mb-1 text-muted">Status</p>
                            <h6><span class="badge bg-warning">@Model.Status</span></h6>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Passenger Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.User?.FirstName @Model.User?.LastName</p>
                    <p><strong>Email:</strong> @Model.User?.Email</p>
                    <p><strong>Phone:</strong> @Model.User?.Phone</p>
                </div>
            </div>

            <div class="alert alert-warning mt-4" role="alert">
                <i class="bi bi-exclamation-triangle"></i> 
                <strong>Important:</strong> Please complete your payment to confirm this reservation. 
                Your booking will be held for 24 hours.
            </div>

            <div class="d-grid gap-2 mt-4">
                <a asp-controller="Payment" asp-action="Index" asp-route-reservationId="@Model.ReservationID" 
                   class="btn btn-success btn-lg">
                    <i class="bi bi-credit-card"></i> Proceed to Payment
                </a>
                <a asp-controller="Reservation" asp-action="Details" asp-route-id="@Model.ReservationID" 
                   class="btn btn-outline-primary">
                    View Reservation Details
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
