@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-3">Welcome to Airlines Reservation System</h1>
    <p class="lead">Book your flights quickly and easily</p>
</div>

<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-search text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">Search Flights</h3>
                    <p class="text-muted">Find the best flights to your destination</p>
                    <a asp-controller="Flight" asp-action="Index" class="btn btn-primary">Search Now</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-ticket-detailed text-success" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">My Reservations</h3>
                    <p class="text-muted">View and manage your bookings</p>
                    <a asp-controller="Reservation" asp-action="MyReservations" class="btn btn-success">View Bookings</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-database text-info" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">Test Database</h3>
                    <p class="text-muted">View database connection and test data</p>
                    <a asp-controller="Test" asp-action="Database" class="btn btn-info">Test Database</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card shadow-sm bg-light">
                <div class="card-body p-4">
                    <h4 class="mb-3"><i class="bi bi-info-circle"></i> Why Choose Us?</h4>
                    <div class="row">
                        <div class="col-md-4">
                            <h6><i class="bi bi-check-circle text-success"></i> Best Prices</h6>
                            <p class="text-muted">Dynamic pricing with early bird discounts</p>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="bi bi-check-circle text-success"></i> Easy Booking</h6>
                            <p class="text-muted">Simple and fast reservation process</p>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="bi bi-check-circle text-success"></i> Flexible Options</h6>
                            <p class="text-muted">Reschedule or cancel with ease</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
